{
  "name": "slyder",
  "version": "0.0.14",
  "description": "TBH",
  "workspaces": [
    "packages/client",
    "packages/@slyder/common",
    "packages/@slyder/server"
  ],
  "main": "./lib/index.js",
  "scripts": {
    "start": "npm run kill-ports && lerna exec --stream --scope @slyder/server --scope @slyder/client -- npm start",
    "build": "npm run clear && lerna run build --parallel",
    "test": "test",
    "clear": "rimraf lib",
    "kill-ports": "kill-port --port 4000,3000"
  },
  "bin": {
    "slyder": "./lib/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MikaelPorttila/slyder.git"
  },
  "keywords": [
    "TBH"
  ],
  "author": "Mikael Porttila",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MikaelPorttila/slyder/issues"
  },
  "homepage": "https://github.com/MikaelPorttila/slyder#readme",
  "devDependencies": {
    "kill-port": "^1.6.1",
    "lerna": "^4.0.0",
    "rimraf": "^3.0.2"
  }
}
